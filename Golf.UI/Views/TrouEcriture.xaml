<UserControl x:Class="Golf.UI.Views.TrouEcriture"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Golf.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Border BorderThickness="1" BorderBrush="Black">
        <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" Text="{Binding Path=Valeur}" />
    </Border>
</UserControl>
